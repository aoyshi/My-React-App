{
  "name": "my-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test-unit": "jest --testPathPattern=test/js/unit/.*\\.test\\.js$ --env=jsdom",
    "test-it": "jest --testPathPattern=test/js/it/.*\\.test\\.js$ --env=jsdom",
    "test-e2e": "jest --testPathPattern=test/js/e2e/.*\\.test\\.js$ --env=jsdom",
    "test": "npm run test-unit && npm run test-it && npm run test-e2e",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "puppeteer": "^1.17.0"
  }
}
